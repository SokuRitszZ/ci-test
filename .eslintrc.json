{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:lit/recommended",
        "plugin:wc/recommended",
        "standard-with-typescript",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "prettier/prettier": "error"
    }
}
